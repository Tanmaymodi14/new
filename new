using namespace std;
#include<iostream>

class employee
{
private:
	int code;
	char name[20];
	float salary;

public:
	void getdata();		//member function declared
	void display();
};
void employee::getdata()
{
  cout<<"Enter the code ";
  cin>>code;
  cout<<"Enter the name ";
  cin>>name;
  cout<<"Enter the salary ";
  cin>>salary;
}
void employee::display()
{
  cout<<"Code is "<<code<<endl;
  cout<<"Name is "<<name<<endl;
  cout<<"Salary is "<<salary<<endl;
}

int main()
{
employee emp;
emp.getdata();
emp.display();
getch();
return 0;
}
